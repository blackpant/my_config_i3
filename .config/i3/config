        status_command i3blocks -c ~/.config/i3blocks/config
        i3bar_command i3bar -t
        separator_symbol "■"
        font pango:Hack, FontAwesome 11
        tray_output primary
        colors {
            statusline          $white
            background          $transparent
            separator           $transparent
            #                   BORDER       BACKGROUND   TEXT
            focused_workspace   #073642      #073642      #EFECCA
            inactive_workspace  $transparent $transparent $darkwhite
            active_workspace    $transparent $transparent #EFECCA
            urgent_workspace    $darkred     $transparent $darkred
            binding_mode        $darkred     $darkred     $black
            #binding_mode       $darkred     $darkwhite   $transparent

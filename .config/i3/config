# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks -c ~/.config/i3blocks/config
        i3bar_command i3bar -t
        # status_command py3status -c ~/.config/i3/i3status.conf
        font pango:Hack, FontAwesome 11
        tray_output primary
        colors {
            statusline         $white
            background         $transparent
            separator          $transparent
#                              BORDER       BACKGROUND   TEXT
            # focused_workspace  $transparent $darkblack   $darkwhite
            focused_workspace  $transparent #073642
            inactive_workspace $transparent $transparent $white
            active_workspace   $transparent $transparent $white
            urgent_workspace   $darkred     $darkred     $transparent
            binding_mode       $darkred     $darkred     $transparent
        }
        height 30
        position top
}


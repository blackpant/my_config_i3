# Mode setting / configuration
#
# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
	
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym m resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#mode $vim ouverture de different fichier de config
mode "Config" {
     bindsym i exec $vim ~/.config/i3/config
     bindsym s exec $vim ~/.config/i3/i3status.conf
     bindsym x exec $vim ~/.Xdefaults
     bindsym c exec $vim ~/.conkyrc 

     bindsym Return mode "default"
     bindsym Escape mode "default"
}
bindsym Mod4+c mode "Config"

mode "Focused" {
     bindsym u [class="URxvt"] focus
     bindsym v [class="Gvim"] focus
     bindsym f [class="Firefox"] focus
     bindsym t [class="Terminator"] focus
     bindsym m [title="cmus*"] focus
     bindsym h [title="htop" class="Terminator"] focus
     bindsym h [title="htop" class="URxvt"] focus

     bindsym Return mode "default"
     bindsym Escape mode "default"
}
bindsym Mod4+f mode "Focused"

# mode menu pour lancer dmenu ou rofi si rofi choisir le mode
bindsym $mod+d mode "Menu"
mode "Menu" {
    bindsym d exec --no-startup-id i3-dmenu-desktop
    bindsym r mode "Rofi"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode "Rofi" {
    bindsym r exec --no-startup-id rofi -show run
    bindsym w exec --no-startup-id rofi -show window
    bindsym s exec --no-startup-id rofi -show ssh
    bindsym d exec --no-startup-id rofi -show drun

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Return mode "Terminal"
mode "Terminal" {
    bindsym a exec --no-startup-id urxvtc
    bindsym e exec --no-startup-id terminator

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindcode 107 mode "screenshot"
mode "screenshot" {
    bindsym f exec --no-startup-id scrot -u -e 'xclip $f -selection clipboard -t image/png'
    bindsym m exec --no-startup-id scrot -m -e 'xclip $f -selection clipboard -t image/png'
    bindsym t exec --no-startup-id i3-scrot -d
    bindsym y exec --no-startup-id i3-scrot -w

    bindsym Return mode "default"
    bindsym Escape mode "default"
}


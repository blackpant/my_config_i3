bindsym $mod+Return mode "Terminal"
mode "Terminal" {
    bindsym a exec --no-startup-id urxvtc
    bindsym e exec --no-startup-id terminator
    bindsym r exec --no-startup-id termite

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindcode 107 mode "screenshot"
mode "screenshot" {
#   bindsym f exec --no-startup-id scrot -f -e 'xclip $f -selection clipboard -t image/png'
#   bindsym m exec --no-startup-id scrot -m -e 'xclip $f -selection clipboard -t image/png'
#   bindsym t exec --no-startup-id maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png | notify-send "SCREENSHOT" "active windows screenshot taken"
    bindsym f exec --no-startup-id maim | xclip -selection clipboard -t image/png | notify-send "SCREENSHOT" "active workspace screenshot."
    bindsym s exec --no-startup-id maim -i $(xdotool getactivewindow)| xclip -selection clipboard -t image/png | notify-send "SCREENSHOT" "screenshot taken of the active window"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}


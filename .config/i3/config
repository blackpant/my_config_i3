# for_window config
# focus the new windows created
# to automatically switch to the new window created
for_window [title="cmus*" class="Terminator"] move container to workspace $tag7, floating enable, move absolute position 0 0, resize set 800 900
for_window [title="cmus*" class="URxvt"] move container to workspace $tag7
for_window [title="cmus*" class="Terminator"] exec --no-startup-id urxvtc -e cava
for_window [title="cmus*" class="URxvt"] exec --no-startup-id urxvtc -e cava
for_window [urgent=latest] focus
for_window [title="cava"] move container to workspace $tag7, split toggle,floating enable,resize set 600 300, move absolute position 900 600
for_window [title="^htop$" class="URxvt"] move workspace $tag6, focus
for_window [title="^htop$" class="Terminator"] move workspace $tag6, focus
